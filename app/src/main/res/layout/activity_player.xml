<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayerActivity"
    android:gravity="center"
    android:orientation="vertical">
            <!--First Row-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <!--Back Button-->
        <ImageView
            android:id="@+id/backBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/back_icon"
            android:layout_marginStart="10dp"
            android:tint="@color/black"
            tools:ignore="UseAppTint"
            android:contentDescription="@string/back_btn" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="@string/music_player"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/AddPlayListBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:tint="@android:color/holo_red_dark"
            android:src="@drawable/playlist_icon"
            tools:ignore="UseAppTint"
            android:contentDescription="@string/playlist_name" />
        <ImageView
            android:id="@+id/favouriteBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:tint="@android:color/holo_red_dark"
            android:src="@drawable/favorite_empty_icon"
            tools:ignore="UseAppTint"
            android:contentDescription="@string/favourites_btn" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/songImgPA"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/curved"
        app:strokeColor="@color/cool_blue"
        app:strokeWidth="5dp"
        android:src="@drawable/splash_screen"/>
    <TextView
        android:id="@+id/songNamePA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:text="@string/song_name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/previousBtnPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/previous_icon"
        app:iconSize="40dp"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/playPauseBtnPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/pause_icon"
        android:layout_marginHorizontal="25dp"
        app:shapeAppearanceOverlay="@style/curved"
        app:iconSize="50dp"
        android:backgroundTint="@android:color/holo_orange_light"
        app:iconTint="@color/white"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/nextBtnPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/next_icon"
        app:iconSize="40dp"/>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSeekBarStart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="@string/start_tv"
            android:gravity="center"
            android:textSize="15sp"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekBarPA"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/tvSeekBarEnd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="@string/end_tv"
            android:gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/repeatBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/cool_pink"
            android:src="@drawable/repeat_icon"
            tools:ignore="NestedWeights,UseAppTint"
            android:layout_weight="1"
            android:contentDescription="@string/repeat_btn" />

        <ImageView
            android:id="@+id/equalizerBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/cool_pink"
            android:src="@drawable/equalizer_icon"
            tools:ignore="UseAppTint"
            android:layout_weight="1"
            android:contentDescription="@string/equalizer_btn" />

        <ImageView
            android:id="@+id/timerBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/cool_pink"
            android:src="@drawable/timer_icon"
            tools:ignore="UseAppTint"
            android:layout_weight="1"
            android:contentDescription="@string/timer_btn" />

        <ImageView
            android:id="@+id/shareBtnPA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/cool_pink"
            android:src="@drawable/share_icon"
            tools:ignore="UseAppTint"
            android:layout_weight="1"
            android:contentDescription="@string/share_btn" />

    </LinearLayout>

</LinearLayout>